<myTypes:BaseNodeControl x:Class="MaterialEditor.Controls.Comment" x:Name="userControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:myTypes ="clr-namespace:CodeGenerateSystem.Base;assembly=CodeGenerateSystem"
             xmlns:local="clr-namespace:MaterialEditor.Controls" NodeType="CommentNode" MinWidth="100" MinHeight="100"
             mc:Ignorable="d" >
    <myTypes:BaseNodeControl.Resources>
        <ResourceDictionary Source="/CodeGenerateSystem;Component/Themes/Generic.xaml" />
    </myTypes:BaseNodeControl.Resources>
    <myTypes:BaseNodeControl.Header>
        <TextBlock x:Name="CommentText" Margin="8" HorizontalAlignment="Left" MinWidth="60" TextWrapping="WrapWithOverflow"/>
    </myTypes:BaseNodeControl.Header>
    <Grid x:Name="ContentGrid" Opacity="0.1"/>
</myTypes:BaseNodeControl>
