<myTypes:BaseNodeControl x:Name="baseNodeControl" x:Class="MaterialEditor.Controls.ShaderAutoData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:myTypes ="clr-namespace:CodeGenerateSystem.Base;assembly=CodeGenerateSystem"
             xmlns:baseCtrl="clr-namespace:CodeGenerateSystem.Controls;assembly=CodeGenerateSystem"
			 xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
             mc:Ignorable="d" ToolTip="{Binding Description, ElementName=baseNodeControl}" BlendBrush="Red">
    <myTypes:BaseNodeControl.Resources>
        <ResourceDictionary Source="/MaterialEditor;component/Themes/Generic.xaml" />
	</myTypes:BaseNodeControl.Resources>
    <myTypes:BaseNodeControl.Header>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Title, ElementName=baseNodeControl}" IsHitTestVisible="False" Foreground="{StaticResource TextForeground}" />
    </myTypes:BaseNodeControl.Header>
    <Grid>
        <baseCtrl:LinkOutControl Name="OutLink" Margin="0,0,8,0" Grid.Row="1" Grid.Column="1" Width="15" Height="15" BackBrush="{StaticResource LinkDefault}" HorizontalAlignment="Right" Direction="Right" />
    </Grid>
</myTypes:BaseNodeControl>
