<UserControl x:Class="EditorCommon.Controls.Animation.NotifyEditeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorCommon.Controls.Animation"
             mc:Ignorable="d" 
             x:Name="userControl"
             d:DesignHeight="30" d:DesignWidth="800" Height="30">
    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="607*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" CornerRadius="5" Background="#FF606060"/>

        <local:AnimationNotifySlider x:Name="AnimSlider" ThumbDragable="False" ThumbWidth="3" Maximum="100" Foreground="Black" Value="0"/>
        <Button Grid.Column="1" Content="+" Margin="2,0"/>
        <Button Grid.Column="2" Content="-" Margin="2,0"/>

    </Grid>
</UserControl>
