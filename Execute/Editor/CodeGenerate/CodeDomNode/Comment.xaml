<myTypes:BaseNodeControl x:Name="userControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeDomNode"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myTypes ="clr-namespace:CodeGenerateSystem.Base;assembly=CodeGenerateSystem"
    xmlns:baseCtrl="clr-namespace:CodeGenerateSystem.Controls;assembly=CodeGenerateSystem"
    xmlns:res="clr-namespace:ResourceLibrary;assembly=ResourceLibrary"
    x:Class="CodeDomNode.Comment"
    mc:Ignorable="d" NodeType="CommentNode" MinWidth="100" MinHeight="100"
    d:DesignHeight="300" d:DesignWidth="400" >
    <myTypes:BaseNodeControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CodeGenerateSystem;Component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </myTypes:BaseNodeControl.Resources>
    <myTypes:BaseNodeControl.Header>
        <TextBlock x:Name="CommentText" Margin="8" HorizontalAlignment="Left" MinWidth="60" TextWrapping="WrapWithOverflow"/>
    </myTypes:BaseNodeControl.Header>
    <Grid x:Name="ContentGrid" Opacity="0.1"/>
</myTypes:BaseNodeControl>
